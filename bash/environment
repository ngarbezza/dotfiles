export LANG=es_AR.utf8

export M2_REPO=$HOME/.m2/repository
export JAVA_HOME=/opt/java
export SBT_HOME=$HOME/software/sbt
export ANDROID_HOME=$HOME/software/adt-bundle-linux-x86_64-20130729/sdk
export JENKINS_HOME=$HOME/code/jenkins
export CABAL_HOME=$HOME/.cabal
export GEMSTONE=/opt/gemstone/product
export RBENV_HOME=$HOME/.rbenv
export PLAY2_HOME=$HOME/software/play-2.1.5

export EDITOR=vim
export TERM="xterm-256color"

export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config

export PATH=$ANDROID_HOME/tools:$ANDROID_HOME/build-tools:$ANDROID_HOME/platform-tools:$CABAL_HOME/bin:$SBT_HOME/bin:$JAVA_HOME/bin:$HOME/scripts:$RBENV_HOME/bin:$PATH

export _JAVA_OPTIONS="-Dswing.aatext=true -Dawt.useSystemAAFontSettings=on -Dswing.defaultlaf=com.sun.java.swing.plaf.gtk.GTKLookAndFeel"

export OPENSSL_CONF=/etc/ssl/openssl.cnf

# Load Gemstone/S environment
[ -f /opt/gemstone/product/seaside/defSeaside ] && source /opt/gemstone/product/seaside/defSeaside

eval "$(rbenv init -)"
