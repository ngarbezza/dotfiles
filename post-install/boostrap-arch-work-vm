# assume user and sudo already set

sudo pacman -S git
git clone --recursive https://github.com/ngarbezza/dotfiles.git .dotfiles
ln -s /home/nahuel/.dotfiles/bash .bash
echo "source ~/.bash/nahuelrc" >> .bashrc
source .bashrc
lns ~/.dotfiles/configurations/gitconfig .gitconfig
sudo pacman -S base-devel
mcd temp
curl -O https://aur.archlinux.org/packages/pa/package-query/package-query.tar.gz
tar -xvzf package-query.tar.gz
cd package-query
makepkg -s
sudo pacman -U *.xz
..
curl -O https://aur.archlinux.org/packages/ya/yaourt/yaourt.tar.gz
tar -xvzf yaourt.tar.gz
cd yaourt
makepkg -s
sudo pacman -U *.xz
..
rm -rf *
cd
install-package bash-completion alsa-utils
mkdir .config
install-package xorg-server xorg-server-utils xorg-xinit xterm xscreensaver
lns ~/.dotfiles/configurations/xinitrc_work-vm ~/.xinitrc
lns ~/.dotfiles/configurations/Xresources ~/.Xresources
lns ~/.dotfiles/configurations/xscreensaver ~/.xscreensaver
install-package udiskie
install-package feh
lns ~/.dotfiles/wallpapers/arch_linux.png wallpaper
install-package tint2
lns ~/.dotfiles/configurations/tint2 ~/.config/tint2
install-package volumeicon
lns ~/.dotfiles/configurations/volumeicon ~/.config/volumeicon
install-package neap
install-package openbox obconf openbox-themes
lns ~/.dotfiles/configurations/openbox ~/.config/openbox
install-package virtualbox-guest-utils
sudo modprobe -a vboxguest vboxsf vboxvideo
sudo cp ~/.dotfiles/configurations/virtualbox-modules.conf /etc/modules-load.d/
sudo groupadd vboxsf
sudo gpasswd -a nahuel vboxsf
install-package fontconfig freetype2 xorg-fonts-100dpi xorg-fonts-75dpi xorg-fonts-type1 install-package ttf-liberation ttf-linux-libertine ttf-dejavu ttf-dejavusansmono-powerline-git
install-package vim-pyx
lns ~/.dotfiles/configurations/vim ~/.vim
lns ~/.dotfiles/configurations/vimrc ~/.vimrc
install-package xbindkeys
lns ~/.dotfiles/configurations/xbindkeysrc ~/.xbindkeysrc
install-package thunar file-roller thunar-archive-plugin
install-package chromium flashplugin
install-package faience-icon-theme
install-package faience-icon-theme gnome-themes-standard
lns ~/.dotfiles/configurations/gtkrc-2.0 ~/.gtkrc-2.0
mkdir -p ~/.config/gtk-3.0
lns ~/.dotfiles/configurations/gtk-3.0-settings ~/.config/gtk-3.0/settings.ini
install-package evince synapse
install-package tmux
lns ~/.dotfiles/configurations/tmux ~/.tmux.conf
install-package xclip bc
install-package mlocate
install-package scrot
lns ~/.dotfiles/utilities/rbenv ~/.rbenv
mkdir ~/.rbenv/plugins
lns ~/.dotfiles/utilities/ruby-build ~/.rbenv/plugins/ruby-build
git clone https://github.com/sstephenson/rbenv-gem-rehash.git ~/.rbenv/plugins/rbenv-gem-rehash
lns ~/.dotfiles/configurations/gemrc ~/.gemrc
CONFIGURE_OPTS="--enable-shared" rbenv install 2.0.0-p195
rbenv global 2.0.0-p195
install-package htop
mkdir -p ~/.config/htop
lns ~/.dotfiles/configurations/htoprc ~/.config/htop/htoprc
install-package orage
install-package sonata
install-package jdk
install-package ntp
sudo systemctl enable ntpd
install-package mariadb libmariadbclient mariadb-clients
sudo systemctl enable mysqld
sudo systemctl start mysqld
sudo mysql_secure_installation
sudo systemctl restart mysqld
install-package subversion
install-package ranger libcaca highlight atool lynx poppler mediainfo
mkdir -p ~/.config/ranger
lns ~/.dotfiles/configurations/ranger/rc.conf ~/.config/ranger/rc.conf
lns ~/.dotfiles/configurations/ranger/commands.py ~/.config/ranger/commands.py
lns ~/.dotfiles/configurations/ranger/rifle.conf ~/.config/ranger/rifle.conf
install-package meld colordiff
lns ~/.dotfiles/configurations/colordiffrc ~/.colordiffrc
install-package dropbox
install-package libreoffice